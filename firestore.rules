rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /metrics/{document} {
      // Allow anyone to read metrics
      allow read: if true;
      
      // Only allow writes from your collector
      // For development, you can allow all writes
      allow write: if true;
      
      // For production, you might want to restrict writes
      // allow write: if request.auth != null;
    }
  }
}